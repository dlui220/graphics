def createImage(xres,yres):
    image = open("image1.ppm",'w')
    s = "P3 " + str(xres) + " " + str(yres) + " 255 "
    r = 255
    g = 0
    b = 255
    for i in range(xres):
        for j in range(yres):
            s += str(r) + " " + str(g) + " " + str(b) + " "
        r -= 1
        g += 1
        b -= 1
    image.write(s)
    image.close()

createImage(500,500)
